<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CS24Rider" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/Theme.MyApp.BottomSheetDialog</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance">
        <item name="fontFamily">@font/cabin_regular</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.09</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance_hint">
        <item name="fontFamily">@font/cabin_regular</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.09</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="space_v_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="space_h_10">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <style name="Theme.MyApp.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.MyApp.BottomSheet.Modal</item>
    </style>

    <style name="Widget.MyApp.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_skipCollapsed">false</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_draggable">true</item>
        <item name="behavior_halfExpandedRatio">0.9</item>
        <item name="behavior_expandedOffset">10dp</item>
        <item name="maxHeight">1000dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--BottomNavigation Style-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/disable_icon</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="colorContainer">@color/white</item>
    </style>
</resources>