<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Map.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <RelativeLayout
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/demo_rider"
                    android:contentDescription="@string/todo"
                    android:elevation="10dp"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_online"
                    android:contentDescription="@string/todo"
                    android:elevation="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="2dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/online_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_circle_back">

                <TextView
                    android:id="@+id/online_offline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online"
                    android:fontFamily="@font/roboto"
                    android:textSize="18sp"
                    android:textColor="@color/text_white"
                    android:textFontWeight="500" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car_white_back"/>

            </LinearLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/map_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="10">

                    <TextView
                        android:id="@+id/map_notification_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:text="@string/requests"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/map_notification_sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_color"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="normal"
                        android:text="@string/requests_desc" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/map_notification_close"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_close_black"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/todo" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_task_list"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_delivery_van"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/todo"/>

        <View
            android:layout_width="10dp"
            android:layout_height="5dp" />

        <ImageView
            android:id="@+id/my_locator"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_locator"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/todo" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/end_ride_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:visibility="gone"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delivery in-progress"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="15sp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:src="@drawable/demo_graphic_user"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/todo" />

                        <View
                            android:layout_width="17dp"
                            android:layout_height="5dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/receiver_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/title_color"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/demo_user_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/star"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/todo" />

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5.0"
                                    android:textColor="@color/title_color"
                                    android:textStyle="normal"
                                    android:fontFamily="@font/roboto"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/call_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/phone_call"
                            android:adjustViewBounds="true"
                            android:padding="11dp"
                            android:contentDescription="@string/todo" />

                        <ImageView
                            android:id="@+id/msg_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="11dp"
                            android:src="@drawable/chat"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/todo" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <Button
                    android:id="@+id/task_complete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:letterSpacing="0"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/text_white"
                    android:backgroundTint="@color/purple_500"
                    android:textAllCaps="false"
                    android:text="@string/end_ride" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>